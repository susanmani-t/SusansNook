<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#848871"
    tools:context=".MainActivity">


    <!-- Add this section to your existing activity_main.xml, in the empty space area -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/todoCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#464b37"
        app:layout_constraintTop_toBottomOf="@id/quoteText"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Tasks"
                android:textColor="#afb4ad"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Add todo input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/editTodo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Add a task..."
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textColor="#afb4ad"
                    android:textColorHint="#848871"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:layout_marginEnd="8dp" />

                <ImageButton
                    android:id="@+id/btnAddTodo"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle_button_background"
                    android:contentDescription="Add todo"
                    android:src="@drawable/ic_add"
                    app:tint="#afb4ad" />

            </LinearLayout>

            <!-- Todo RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:scrollbars="vertical" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Rounded Rectangle Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/randomImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:contentDescription="User image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageStyle" />

    <!-- Edit Button (Add/Delete) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEditPics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:foregroundTint="#B9F6CA"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="#B9F6CA"
        app:backgroundTint="#464b37"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/randomImage"
        app:rippleColor="#B9F6CA" />

    <!-- Inspirational Quote -->
    <TextView
        android:id="@+id/quoteText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Daily inspirational quote here"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/randomImage" />

    <!-- Diary and Games Buttons (Circular ImageButtons) -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btnDiary"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/diary_icon"
            app:shapeAppearanceOverlay="@style/CircleShape" />

        <ImageButton
            android:id="@+id/btnGames"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/games_icon"
            app:shapeAppearanceOverlay="@style/CircleShape" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>